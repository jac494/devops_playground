{
  "id": null,
  "uid": "platform-observability",
  "title": "Platform Observability (Tempo + Loki + OTel Collector)",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "timeseries",
      "title": "OTEL Collector: Spans Received",
      "targets": [
        {
          "expr": "rate(otelcol_receiver_accepted_spans[1m])",
          "datasource": "Prometheus"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 6 }
    },
    {
      "type": "timeseries",
      "title": "Loki: Ingest Rate",
      "targets": [
        {
          "expr": "rate(loki_ingester_lines_received_total[1m])",
          "datasource": "Prometheus"
        }
      ],
      "gridPos": { "x": 0, "y": 6, "w": 24, "h": 6 }
    },
    {
      "type": "timeseries",
      "title": "Tempo: Spans Ingested",
      "targets": [
        {
          "expr": "rate(tempo_distributor_spans_received_total[1m])",
          "datasource": "Prometheus"
        }
      ],
      "gridPos": { "x": 0, "y": 12, "w": 24, "h": 6 }
    }
  ]
}
